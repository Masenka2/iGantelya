#include <LiquidCrystal.h>
#include <Wire.h>
#include <GOST4401_81.h>
#include <l3g4200d.h>
#include <lis331dlh.h>
#include <lis3mdl.h>
#include <LPS331.h>
#include <MadgwickAHRS.h>
#include <TroykaIMU.h>


LiquidCrystal lcd(7, 5, 10, 11, 12, 13);
int butt;
int kol = 0;
char a;
int x = 0;
float time1;
float acel;
float current, prev;
float time2;
int counter = 0;

Accelerometer accel;
unsigned long time;




void setup() {

  pinMode(2, INPUT);
  pinMode(8, OUTPUT);
  //delay(500);
  lcd.begin(16, 2);
  Serial.begin(9600);
  while (!Serial);
  accel.begin();
  // устанавливаем чувствительность акселерометра
  // 2g — по умолчанию, 4g, 8g
  accel.setRange(RANGE_8G);
  current = prev = accel.readAZ();

}

void loop() {
  butt = digitalRead(2);
  if (butt == 0)
  {
      x = 1;
      digitalWrite(8, HIGH);
      lcd.print("Wait...");
      delay(2000);
      lcd.clear();
  }

  while (x == 1){
    lcd.print("OHOHOH");
    delay(1000);
    lcd.clear();
    butt = digitalRead(2);
    if (butt == 0)
    {
      x = 0;
      digitalWrite(8, LOW);
      delay(100); 
    }
    time1 = millis();
    current = accel.readAZ();
    if (current > 11) {
      counter++;
      time2 = millis();
      Serial.print("deltatime = ");
      Serial.println(time2 - time1);
      lcd.print("Good ;) ");
      lcd.print(counter);
      delay(1000);
      lcd.clear();
    }
  }

  digitalWrite(8, LOW);
  delay(500);
  Serial.print("BUTTON!! = ");
  Serial.println(butt);

  prev = current;   
}
    
